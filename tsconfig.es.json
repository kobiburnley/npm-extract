{
  "compilerOptions": {
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "lib": [
      "dom",
      "es5",
      "es2015.iterable",
      "es2015.collection",
      "es2015.promise",
      "es2015.core"
    ],
    "target": "es2015",
    "strict": true,
    "declaration": true,
    "outDir": "es",
    "jsx": "react",
    "importHelpers": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts*",
    "test/**/*.ts*"
  ]
}
